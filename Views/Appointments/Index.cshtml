 @model IEnumerable<DentalWebApp.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
    int totalAppointments = Model.Count();
    int rowNumber = 1;
}

<hr />
<h4>Appointments - List</h4>
<hr />

<p>
    <div style="margin-bottom: 10px;">
        <a asp-action="Create" class="btn btn-primary">
            Schedule a New Appointment <i class="bi bi-pencil-square"></i>
        </a>
    </div>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <table class="table table-bordered table-striped">
            <thead>
                <tr class="table-success">
                    <th colspan="9" style="text-align: center; vertical-align: middle;">
                        Appointments List : @totalAppointments Total
                    </th>
                </tr>
                <tr class="table-primary">
                    <th style="text-align: center; vertical-align: middle;"><strong>№</strong></th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dentist)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patient)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        Actions
                    </th>
                </tr>
            </thead>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle; font-size: 17px;"><strong>@rowNumber</strong></td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Dentist.FullName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Patient.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td style="text-align: center; vertical-align: middle;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-list-ul"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-trash3"></i>
                    </a>
                </td>
            </tr>
            rowNumber++;
        }
    </tbody>
</table>
